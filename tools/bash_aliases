# }

function stageapp {
    ssh-add -l | grep -q "c2g-stag" || echo "ERROR: no \"c2g-stag\" key in your ssh agent, this probably won't work"
    ssh -A bitnami@${hoststage}.stage.c2gops.com
}

function jenkins {
    ssh-add -l | grep -q "c2g-stag" || echo "ERROR: no \"c2g-stag\" key in your ssh agent, this probably won't work"
    ssh -A ubuntu@jenkins.dev.c2gops.com
}

