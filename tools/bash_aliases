#!/bin/bash

## source this from your login shell

hoststage="app1"
hostprod="app1"

function prodapp {
    ssh-add -l | grep -q "c2g-stag" || echo "ERROR: no \"c2g-prod\" key in your ssh agent, this probably won't work"
    ssh -A bitnami@${hostprod}.prod.c2gops.com
}

